{% block html_head_container %}

{% include 'html-header.twig' %}
	{% block head %}
	{% endblock %}
	</head>
{% endblock %}

	<body class="{{body_class}} container-fluid" data-template="base.twig">
		<a class="skip-link screen-reader-text" href="#content">{{ _e( 'Skip to content') }}</a>
		<header class="header" >
			{% block header %}
				<div class="wrapper row h-100">
					<h2 class="name col-sm-12 col-md-6 text-sm-center text-md-left my-auto" role="banner">
						<a class="name__link" href="{{site.url}}" rel="home">{{site.name}}</a>
					</h2>
					<nav id="nav-main" class="nav-main col-sm-12 col-md-6 text-md-right text-sm-center my-auto ml-auto" role="navigation">
						{% include "menu.twig" with {'items': menu.get_items} %}
					</nav><!-- #nav -->
				</div>
			{% endblock %}
		</header>

		<section id="content" role="main" class="content-wrapper row{% if fn('is_front_page') %} hero{% endif %}">
			{% if fn('is_front_page') %}
			<div class="col-sm-10 col-md-9 col-lg-8 mx-auto">
				<img src="{{ theme.path }}/assets/img/hi.svg" alt="Hi" class="hi">

			</div>
			{% endif %}
			{% if title %}<h1>{{title}}</h1>{% endif %}
			<div class="wrapper {{sidebar_class}} col-12">
				{% block content %}
					Sorry, no content
				{% endblock %}
			</div>
			{% if sidebar %}
				<aside class="layout-sidebar">
					{{sidebar}}
				</aside>
			{% endif %}
		</section>

		{% block footer %}
			<footer id="footer">
				{% include 'footer.twig' %}
			</footer>
			{{ function('wp_footer') }}
		{% endblock %}
	</body>
</html>
